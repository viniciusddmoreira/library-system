@model LibrarySystem.Data.Models.Book

@{
	ViewData["Title"] = "Edit";
}

<h1>Alterar Livro</h1>

<h4>As informações para alteração do livro se encontram abaixo</h4>
<hr />
<div>
	<a asp-action="Index" class="btn btn-primary"><i class="fa-regular fa-circle-left"></i> Voltar</a>
</div>
<br />
<div class="row">
	<div class="col-md">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="card">
				<div class="card-header">Informações do livro</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md">
							<div class="form-group">
								<label asp-for="Name" class="control-label"></label>
								<input asp-for="Name" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Author" class="control-label"></label>
								<input asp-for="Author" class="form-control" />
								<span asp-validation-for="Author" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md">
							<div class="form-group">
								<label asp-for="Publisher" class="control-label"></label>
								<input asp-for="Publisher" class="form-control" />
								<span asp-validation-for="Publisher" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="PublicationDate" class="control-label"></label>
								<input asp-for="PublicationDate" class="form-control" />
								<span asp-validation-for="PublicationDate" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="Edition" class="control-label"></label>
								<input asp-for="Edition" class="form-control" />
								<span asp-validation-for="Edition" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
			</div>
			<br />
			<div class="form-group">
				<button type="submit" class="btn btn-success">
					<i class="fa-regular fa-floppy-disk"></i> Salvar
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
